@model Web_CSE.Models.Category

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Chi tiết bài viết</h1>

<div>
    <h4>Bài viết</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <label asp-for="Title" class="control-label">Tiêu đề</label>
        </dt>
        <dd class = "col-sm-10 posts-title">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="CatName" class="control-label">Nội dung</label>
        </dt>
        <dd class = "col-sm-10 posts-title">
            @Html.DisplayFor(model => model.CatName)
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Thumb" class="control-label">Ảnh đại diện</label>
        </dt>
        <dd class = "col-sm-10">
           @* @Html.DisplayFor(model => model.Thumb)*@
           <img src="/images/categories/@Model.Thumb" alt="@Model.Thumb" style="max-width:200px" />
        </dd>
    </dl>
</div>
<div>
    <form asp-action="Delete" class="post-index">
         <input type="hidden" asp-for="CatId" />
        <input type="submit" value="Xóa" class="btn btn-danger" />
        <a asp-action="Index" class="back-to-list"><i class="fa fa-arrow-left" aria-hidden="true"></i>Trở lại</a>
    </form>
</div>
