@model Web_CSE.Areas.Admin.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdminLogin.cshtml";
}
<div class="signin-wrapper">
<form asp-area="Admin" asp-controller="Accounts" asp-action="Login" method="post">
      <div class="signin-box">
        <h2 class="slim-logo"><a href="index.html">slim<span>.</span></a></h2>
        <h2 class="signin-title-primary">Welcome back!</h2>
        <h3 class="signin-title-secondary">Sign in to continue.</h3>
        

        <div class="form-group">
          <input type="text" class="form-control" placeholder="Enter your email" asp-for="Email">
        </div><!-- form-group -->
        <div class="form-group ">
          <input type="password" class="form-control" placeholder="Enter your password" asp-for="Password">
        </div><!-- form-group -->
        <h6 style="color: red; text-align:center; margin-bottom:10px"  class="mg-b-0">@ViewBag.Error</h6>
        <button class="btn btn-primary btn-block btn-signin">Sign In</button>
     
</form>
      </div><!-- signin-box -->

</div><!-- signin-wrapper -->