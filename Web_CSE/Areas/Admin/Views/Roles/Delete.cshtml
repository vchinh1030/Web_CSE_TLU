@model Web_CSE.Models.Role

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Xóa quyền truy cập</h1>

<h3>Bạn có chắc chắn muốn xóa?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <label class="control-label">Tên quyền truy cập</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RoleName)
        </dd>
        <dt class = "col-sm-2">
            <label class="control-label">Chi tiết quyền truy cập</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RoleDescription)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <div class="post-index">
            <input type="hidden" asp-for="RoleId" />
            <input type="submit" value="Xóa quyền truy cập" class="btn btn-danger" />
            <a asp-action="Index" class="back-to-list"><i class="fa fa-arrow-left" aria-hidden="true"></i>Quay lại</a>
        </div>
    
    </form>
</div>
