@model Web_CSE.Models.Role

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Thêm quyền truy cập</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleName" class="control-label">Tên quyền truy cập</label>
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoleDescription" class="control-label">Chi tiết quyền truy cập</label>
                <input asp-for="RoleDescription" class="form-control" />
                <span asp-validation-for="RoleDescription" class="text-danger"></span>
            </div>
            <div class="form-group post-index">
                <input type="submit" value="Thêm mới" class="btn btn-primary" />
                <a asp-action="Index" class="back-to-list "><i class="fa fa-arrow-left" aria-hidden="true"></i>Quay lại</a>
            </div>
        </form>
    </div>
</div>


